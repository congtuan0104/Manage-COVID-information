<div class="container rounded bg-white mt-0 mb-2 py-0">
    <form  action="/manager/updatePatientInfo" method="post">
        <div class="row">
            <div class="col-md-3 border-right ">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5" width="150px"
                        src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                    <span class="font-weight-bold">{{patient.patient_name}}</span>
                    <span class="text-black-50 text-break">CMND: {{patient.identity_card}}</span>
                </div>
            </div>
            <div class="col-md-4 border-right">
                <div class="p-3 py-5">
                    <input type="hidden" name="patientID" value="{{patient.patient_id}}">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Thông tin cá nhân</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12"><label class="labels">Họ Tên</label><input type="text"
                                class="form-control" name = "patient_name" value="{{patient.patient_name}}" placeholder="Họ Tên" ></div>
                        <div class="col-md-12"><label class="labels">Năm sinh</label><input type="text"
                                class="form-control" name = "birthday" value="{{patient.birthday}}" placeholder="Năm sinh"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Địa chỉ nơi ở</label>
                            <input type="text" class="form-control" name="address" placeholder="Địa chỉ" value="{{patient.address}}">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">CMND</label>
                            <input type="text" class="form-control" name ="identity_card" placeholder="CMND"
                                value="{{patient.identity_card}}">
                        </div>
                    </div>

                </div>

            </div>
            <div class="col-md-5">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Thông tin dịch tể</h4>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Trạng thái hiện tại (F) </label>
                            <input type="number" class="form-control" name="status" placeholder="Trạng thái"
                                value="{{patient.status}}" min="0">
                        </div>
                         <div class="col-md-12">
                            <label class="labels">Lịch sử điều trị/cách ly</label>
                            <input type="text" class="form-control" name="treatment_history_name" placeholder="Lịch sử điều trị"
                                value="{{treatmentPlace.place_name}}">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Địa chỉ điều trị/cách ly</label>
                            <input type="text" class="form-control" name="treatment_place_name" placeholder="Đỉa chỉ điều trị"
                                value="{{treatmentPlace.place_name}}">
                            

                        </div>

                        <div class="col-md-12">
                            <label class="labels">Chuyển nơi điều trị đến</label>
                            <select name="new_place_id" class="custom-select" >
                                {{#each listTreatmentPlace}}
                                    <option value='{{this.place_id}}'>{{this.place_name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="col-md-12">
                            <h4 class="pt-4">Danh sách người liên quan Covid</h4>
                            <div class="container mt-3 mb-4">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="bg-white shadow-sm">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th>Họ tên</th>
                                                            <th>CMND</th>
                                                            <th class="text-center">Trạng thái</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        {{#each relatedPatients}}
                                                        <tr class="candidates-list">
                                                            <td>
                                                                <div class="">{{this.patient_name}}</span>
                                                            </td>
                                                            <td>
                                                                <div class="">{{this.identity_card}}</span>
                                                            </td>
                                                            <td>
                                                                <div class="text-center"
                                                                    class="candidate-list-time order-1">F{{this.status}}</span>
                                                            </td>
                                                        </tr>
                                                        {{/each}}
                                                    </tbody>
                                                </table>
                                                <div class="text-center mt-3 mt-sm-3">
                                                    <ul class="pagination justify-content-center mb-0">
                                                        <li class="page-item disabled"> <span
                                                                class="page-link">Prev</span>
                                                        </li>
                                                        <li class="page-item active" aria-current="page"><span
                                                                class="page-link">1 </span> <span
                                                                class="sr-only">(current)</span></li>
                                                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                                                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                                                        <li class="page-item"><a class="page-link" href="#">...</a></li>
                                                        <li class="page-item"> <a class="page-link" href="#">Next</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col text-right">
            <button type="submit" class="btn btn-success">Cập nhật thông tin</button>
        </div>
    </form>
</div>